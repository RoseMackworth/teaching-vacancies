%details.govuk-details{ "data-module": "govuk-details" }
  %summary.govuk-details__summary
    %span.govuk-details__summary-text
      Add more filters
  .filter-group__container
    - ['job_roles', 'phases', 'working_patterns'].each do |filter_type|
      %h3.filter-group__section-heading{ id: "filter-group-default-heading-#{filter_type}" }
        = t("jobs.filters.#{filter_type}")

      .checkbox-group__container{ aria: { labelledby: "filter-group-default-heading-#{filter_type}" }, data: { group: "#{filter_type}" } }
        = render 'shared/checkbox_group', search: false, f: f, attribute_name: filter_type.to_sym, options: @jobs_search_form.send("#{filter_type.chop}_options".to_sym), value_method: :first, text_method: :last, small: true

